[Unit]
Description=Docker Snapshots
BindsTo=docker.service
Before=docker.service

[Service]
Type=oneshot
ExecStart=/usr/bin/zfs snapshot z/images@$(/usr/bin/date +%Y%m%dT%H%M%S)-docker-start
RemainAfterExit=true
ExecStop=/usr/bin/zfs snapshot z/images@$(/usr/bin/date +%Y%m%dT%H%M%S)-docker-stop

[Install]
WantedBy=docker.service
